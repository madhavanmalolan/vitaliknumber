extends layout

block content
  center(style="height: 100%")
    img(style="height: 200px" src="https://cdn.dribbble.com/users/5201004/screenshots/15802286/media/b2a54a1a140074434a505f61767e3233.png?compress=1&resize=1200x900&vertical=top")
    .primary(style="height: calc(100% - 80px)")
      h1 @#{username}
      .post(style="text-align: left; max-width: 500px; margin: 10px; border: 1px; border-color: #fff; border-style: solid; padding: 30px")
        small(style="text-align: right") #NFT Post on LensProtocol
        p CONFIRMED VITALIK NUMBER 
        h1 #{post.lensPath.length === 0? 10 : post.lensPath.length}
        p EXPECTED VITALIK NUMBER 
        h2 #{post.githubPath.length === 0? 10 : post.githubPath.length}
        br
        p To improve your score, invite the following users to claim their Vitalik Score 
        ol
          for user in post.githubPath
            li #{user}
        
